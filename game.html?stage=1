<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Stage 1 - Unfair Parkour</title>
    <style>
        body { margin: 0; padding: 0; background-color: #111; color: white; font-family: 'Courier New', monospace; overflow: hidden; touch-action: manipulation; }
        canvas { display: block; background-color: #222; }
        #ui { position: absolute; top: 10px; left: 10px; z-index: 10; font-size: 18px; }
        #msg { position: absolute; width: 100%; text-align: center; top: 40%; font-size: 24px; font-weight: bold; display: none; z-index: 10; text-shadow: 2px 2px #000; }
        .controls { position: absolute; bottom: 20px; width: 100%; display: flex; justify-content: space-around; z-index: 10; pointer-events: none; }
        .btn { width: 70px; height: 70px; background: rgba(255, 255, 255, 0.1); border: 1px solid white; display: flex; align-items: center; justify-content: center; pointer-events: auto; user-select: none; }
    </style>
</head>
<body>

    <div id="ui">Stage 1 | Deaths: <span id="deathCount">0</span></div>
    <div id="msg">버그 아님</div>
    <canvas id="gameCanvas"></canvas>

    <div class="controls">
        <div id="btnLeft" class="btn">◀</div>
        <div id="btnJump" class="btn">JUMP</div>
        <div id="btnRight" class="btn">▶</div>
    </div>

<script>
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    const deathDisplay = document.getElementById('deathCount');
    const msgDisplay = document.getElementById('msg');

    function resize() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
    }
    window.addEventListener('resize', resize);
    resize();

    let deaths = 0;
    let isCleared = false;
    const gravity = 0.45;
    const moveSpeed = 4.5;
    let cameraX = 0;
    
    // 스킨 적용 (localStorage에서 가져옴, 없으면 흰색)
    const playerColor = localStorage.getItem('playerColor') || '#ffffff';

    let player = {
        x: 100, y: 300, w: 25, h: 25, vx: 0, vy: 0,
        grounded: false,
        spawnX: 100, spawnY: 300
    };

    let keys = {};
    
    // 스테이지 1 구성
    const stage1Platforms = [
        {x: 0, y: 450, w: 400, h: 40, type: 'normal'},      // 시작 지점
        {x: 500, y: 400, w: 100, h: 20, type: 'disappear'}, // 밟으면 사라짐 (억까 1)
        {x: 700, y: 350, w: 120, h: 20, type: 'normal'},
        {x: 900, y: 300, w: 100, h: 20, type: 'slippery'},  // 미끄러움 (억까 2)
        {x: 1100, y: 350, w: 150, h: 20, type: 'normal'},
        {x: 1350, y: 300, w: 80, h: 20, type: 'disappear'}, // 골 직전 사라짐 (억까 3)
        {x: 1550, y: 250, w: 150, h: 20, type: 'goal'}      // 목적지 (빨간색)
    ];

    let platforms = [];

    function initStage() {
        platforms = stage1Platforms.map(p => ({ ...p, hidden: false }));
    }

    function resetPlayer() {
        if(isCleared) return;
        deaths++;
        deathDisplay.innerText = deaths;
        
        // 사망 메시지
        msgDisplay.innerText = "의도된 플레이입니다.";
        msgDisplay.style.display = 'block';
        setTimeout(() => msgDisplay.style.display = 'none', 1000);

        player.x = player.spawnX;
        player.y = player.spawnY;
        player.vx = 0;
        player.vy = 0;
        initStage();
    }

    // 입력 처리
    window.addEventListener('keydown', e => keys[e.code] = true);
    window.addEventListener('keyup', e => keys[e.code] = false);

    const setTouch = (id, key) => {
        const el = document.getElementById(id);
        el.onpointerdown = (e) => { e.preventDefault(); keys[key] = true; };
        el.onpointerup = (e) => { e.preventDefault(); keys[key] = false; };
    };
    setTouch('btnLeft', 'ArrowLeft');
    setTouch('btnRight', 'ArrowRight');
    setTouch('btnJump', 'Space');

    function update() {
        if(isCleared) return;

        if (keys['ArrowLeft']) player.vx = -moveSpeed;
        else if (keys['ArrowRight']) player.vx = moveSpeed;
        else player.vx *= 0.8;

        if (keys['Space'] && player.grounded) {
            // 점프력 랜덤 변조 (억까)
            player.vy = -11 * (0.9 + Math.random() * 0.2);
            player.grounded = false;
        }

        player.vy += gravity;
        player.x += player.vx;
        player.y += player.vy;
        player.grounded = false;

        // 카메라 추적
        let targetX = player.x - canvas.width / 3;
        cameraX += (targetX - cameraX) * 0.1;

        // 충돌 체크
        platforms.forEach(p => {
            if (p.hidden) return;

            if (player.x < p.x + p.w && player.x + player.w > p.x &&
                player.y + player.h > p.y && player.y < p.y + p.h) {
                
                if (player.vy > 0 && player.y + player.h - player.vy <= p.y) {
                    player.y = p.y - player.h;
                    player.vy = 0;
                    player.grounded = true;

                    if (p.type === 'disappear') setTimeout(() => p.hidden = true, 150);
                    if (p.type === 'slippery') player.x += 4;
                    
                    if (p.type === 'goal') {
                        clearStage();
                    }
                }
            }
        });

        if (player.y > canvas.height + 100 || player.x < cameraX - 100) resetPlayer();
    }

    function clearStage() {
        isCleared = true;
        msgDisplay.innerText = "STAGE 1 CLEAR!";
        msgDisplay.style.display = 'block';
        msgDisplay.style.color = "#00ff00";

        // 3초 후 다음 스테이지로 이동
        setTimeout(() => {
            window.location.href = 'https://murang-korea.github.io/unfair/game.html?stage=2';
        }, 3000);
    }

    function draw() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.save();
        ctx.translate(-cameraX, 0);

        // 플레이어 (스킨 적용)
        ctx.fillStyle = playerColor;
        ctx.fillRect(player.x, player.y, player.w, player.h);

        // 발판
        platforms.forEach(p => {
            if (p.hidden) return;
            ctx.fillStyle = p.type === 'goal' ? "#ff4444" : (p.type === 'slippery' ? "#4444ff" : "#666");
            ctx.fillRect(p.x, p.y, p.w, p.h);
        });

        ctx.restore();
        requestAnimationFrame(() => { update(); draw(); });
    }

    initStage();
    draw();
</script>
</body>
</html>
